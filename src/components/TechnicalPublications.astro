---
const publications = [
    {
        title: "Distributed Systems Design Patterns",
        publication: "Tech Architecture Quarterly",
        impact: "10,000+ citations",
    },
    {
        title: "Cloud-Native Architecture Best Practices",
        publication: "System Design Weekly",
        impact: "Featured Article",
    },
];
---

<div class="border-t-2 vintage-border pt-6 mb-8">
    <h2 class="font-['Playfair_Display'] text-xl font-bold mb-4">
        TECHNICAL PUBLICATIONS
    </h2>
    {
        publications.map((pub) => (
            <article class="mb-6">
                <h3 class="font-bold mb-2">{pub.title}</h3>
                <div class="text-sm">
                    <p class="italic">{pub.publication}</p>
                    <p class="text-gray-600">{pub.impact}</p>
                </div>
            </article>
        ))
    }
</div>
