---
const advertisements = [
    {
        title: "CLOUD SOLUTIONS",
        icon: "★★★",
        slogan: "GUARANTEED SCALABILITY!",
        features: [
            "High Availability",
            "Cost Optimization",
            "Performance Tuning",
        ],
        tagline: "\"Your Infrastructure, Our Expertise\"",
    },
    {
        title: "SYSTEM DESIGN",
        icon: "⚡",
        slogan: "ARCHITECTURE MASTERY!",
        features: [
            "Microservices Design",
            "Database Optimization",
            "API Development",
        ],
        tagline: "\"Building Tomorrow's Systems Today\"",
    },
];
---

<section class="border-2 vintage-border p-6 mb-8">
    <h2 class="font-['Playfair_Display'] text-2xl font-bold mb-6 text-center">
        TECHNICAL ADVERTISEMENTS
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {
            advertisements.map((ad) => (
                <div class="p-6 border-2 vintage-border accent-bg text-center">
                    <h3 class="font-['Playfair_Display'] text-xl font-bold mb-4">
                        {ad.title}
                    </h3>
                    <div class="text-3xl mb-4">{ad.icon}</div>
                    <p class="text-sm mb-4">{ad.slogan}</p>
                    <ul class="text-sm mb-4">
                        {ad.features.map((feature) => (
                            <li>{feature}</li>
                        ))}
                    </ul>
                    <p class="text-xs italic">{ad.tagline}</p>
                </div>
            ))
        }
    </div>
</section>
