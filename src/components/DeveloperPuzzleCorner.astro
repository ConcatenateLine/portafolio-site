---
const asciiArt = {
    title: "TODAY'S ASCII ART CHALLENGE",
    art: `                     _____
                    |     |
                    | [ ] |
                    |  ^  |
                    | ___ |
                    |     |
                    |DEBUG|
                    |_____|`,
    challenge: "Can you recreate this debugging robot using only ASCII characters?",
};

const codeRiddle = {
    current: {
        title: "DAILY CODE RIDDLE",
        lines: [
            "I have keys but no locks,",
            "I have space but no room,",
            "You can enter but not go in.",
        ],
        question: "What am I?",
    },
    previous: {
        title: "YESTERDAY'S ANSWER",
        answer: "\"A Keyboard!\"",
        congratulation: "Congratulations to all developers who solved it without using Stack Overflow.",
    },
};
---

<section class="border-2 vintage-border p-6 mb-8">
    <h3 class="font-['Playfair_Display'] text-xl font-bold mb-4 text-center">
        DEVELOPER'S PUZZLE CORNER
    </h3>

    <!-- ASCII Art -->
    <div class="vintage-frame p-4 mb-4">
        <h4 class="font-bold text-sm mb-3 text-center">
            {asciiArt.title}
        </h4>
        <pre class="font-mono text-xs text-center whitespace-pre">
{asciiArt.art}
        </pre>
        <p class="text-xs text-center mt-2 italic">
            {asciiArt.challenge}
        </p>
    </div>

    <!-- Code Riddles -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm">
        <div class="p-3 border vintage-border">
            <h4 class="font-bold mb-2">{codeRiddle.current.title}</h4>
            {codeRiddle.current.lines.map((line) => (
                <p class="italic mb-2">{line}</p>
            ))}
            <p class="text-xs text-right">{codeRiddle.current.question}</p>
        </div>
        <div class="p-3 border vintage-border">
            <h4 class="font-bold mb-2">{codeRiddle.previous.title}</h4>
            <p class="italic">{codeRiddle.previous.answer}</p>
            <p class="text-xs mt-2">{codeRiddle.previous.congratulation}</p>
        </div>
    </div>
</section>
