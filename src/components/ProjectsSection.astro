---
import { projects } from '../config/projects';
---

<section class="border-b-2 vintage-border pb-8 mb-8">
    <h2 class="font-['Playfair_Display'] text-3xl md:text-4xl font-bold mb-6 vintage-text">
        TECHNICAL PORTFOLIO HIGHLIGHTS
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {projects.map((project) => (
            <article class="vintage-border-pattern p-6">
                <div class="mb-4">
                    <img
                        src={project.image}
                        alt={project.title}
                        class="w-full h-48 object-cover grayscale hover:grayscale-0 transition-all duration-300"
                    />
                </div>
                <h3 class="font-['Playfair_Display'] text-xl font-bold mb-2">
                    {project.title}
                </h3>
                <h4 class="text-base mb-3 font-serif italic text-muted">
                    {project.subtitle}
                </h4>
                <p class="text-base mb-4 leading-relaxed">
                    {project.description}
                </p>
                {project.technologies && (
                    <div class="flex flex-wrap gap-2 mb-4">
                        {project.technologies.map((tech) => (
                            <span class="vintage-badge">{tech}</span>
                        ))}
                    </div>
                )}
                <blockquote class="border-l-4 vintage-border pl-4 italic">
                    {project.quote}
                </blockquote>
            </article>
        ))}
    </div>
</section>
