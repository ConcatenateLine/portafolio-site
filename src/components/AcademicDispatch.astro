---
import { languageStore } from "../store/languageStore";
const t = (key: string) => languageStore.translate(key);
---

<section class="mb-12 highlight-box p-6">
    <h2 class="font-['Playfair_Display'] text-2xl font-bold mb-4">
        {t("academic.title")}
    </h2>
    <h3 class="text-xl font-bold mb-2">
        {t("academic.degree")}
    </h3>
    <p class="italic mb-4">
        {t("academic.specialization")}
    </p>
    <ul class="space-y-2">
        {
            t("academic.achievements")
        }
    </ul>
</section>
