---
import "../styles/vintage.css";
import Masthead from "../components/Masthead.astro";
import Footer from "../components/Footer.astro";
import MainArticle from "../components/MainArticle.astro";
import TechnicalGazette from "../components/TechnicalGazette.astro";
import SpecialEdition from "../components/SpecialEdition.astro";
import TechnicalPublications from "../components/TechnicalPublications.astro";
import ProfessionalMilestones from "../components/ProfessionalMilestones.astro";
import TechnicalAdvertisements from "../components/TechnicalAdvertisements.astro";
import DeveloperPuzzleCorner from "../components/DeveloperPuzzleCorner.astro";
import ThemeToggle from "../components/ThemeToggle.astro";
import ProjectsSection from "../components/ProjectsSection.astro";
import SocialContact from "../components/SocialContact.astro";
import { getCurrentFormattedDate } from "../utils/dateUtils";
import { mainProject } from "../config/projects";
import { siteContent } from "../config/content";

const currentDate = getCurrentFormattedDate();
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<link
			href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700;900&family=Source+Serif+Pro:wght@400;700&display=swap"
			rel="stylesheet"
		/>
		<title>{siteContent.meta.title}</title>
	</head>
	<body class="vintage-bg">
		<div class="vintage-corner-topleft"></div>
		<Masthead currentDate={currentDate}>
			<ThemeToggle slot="right-top" />
		</Masthead>

		<!-- Main Content -->
		<main class="max-w-7xl mx-auto vintage-secondary-bg p-8 relative">
			<!-- Vintage Paper Texture Overlay -->
			<div
				class="absolute inset-0 vintage-paper-texture opacity-30 pointer-events-none"
			>
			</div>

			<!-- Quote of the Day with Vintage Frame -->
			<div class="vintage-frame mb-8">
				<div class="vintage-quote">
					{siteContent.quotes.mainQuote}
				</div>
			</div>

			<!-- Vintage Separator with Ornaments -->
			<div class="flex items-center justify-center my-8">
				<div class="vintage-ornament"></div>
				<div class="vintage-separator mx-4 flex-grow"></div>
				<div class="vintage-ornament"></div>
			</div>

			<!-- Grid Layout with Vintage Frames -->
			<div class="grid grid-cols-1 md:grid-cols-12 gap-8">
				<!-- Main Column -->
				<div class="md:col-span-8">
					<div>
						<MainArticle mainProject={mainProject} />
						<ProjectsSection />
						<TechnicalGazette />
						<SpecialEdition />
						<DeveloperPuzzleCorner />
						<TechnicalAdvertisements />
					</div>
				</div>

				<!-- Side Column with Vintage Border -->
				<div class="md:col-span-4">
					<div class="vintage-sidebar">
						<ProfessionalMilestones />
						<TechnicalPublications />
						<SocialContact />
					</div>
				</div>
			</div>

			<Footer pageNumber={1} />

			<!-- Fun Footer Notice -->
			<div class="text-center text-xs italic mt-8 mb-4">
				<p>
					{siteContent.footer.warning}
				</p>
				<p class="mt-1">
					{siteContent.footer.sideEffects}
				</p>
			</div>
		</main>
		<div class="vintage-corner-bottomright"></div>
	</body>
</html>
